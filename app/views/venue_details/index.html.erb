<div class="page-header">
  <h1>
    Venue details
    <a href="/venue_details/new" class="btn btn-lg btn-success">New Venue detail</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Venue name</th>
        <th>Venue address</th>
        <th>Actions</th>
      </tr>

      <% @venue_details.each do |venue_detail| %>
      <tr>
        <td><%= venue_detail.venue_name %></td>
        <td><%= venue_detail.venue_address %></td>
        <td>
          <a href="/venue_details/<%= venue_detail.id %>" class="btn btn-primary">Show</a>
          <a href="/venue_details/<%= venue_detail.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_venue_detail/<%= venue_detail.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @venue_details, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
